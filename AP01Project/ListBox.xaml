<Window x:Class="AP01Project.ListBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AP01Project"
        mc:Ignorable="d"
        Title="ListBox" Height="800" Width="450">
    <!--<Window.DataContext>
        --><!--<local:Book/>--><!--
    </Window.DataContext>-->
    <StackPanel>
        <TextBlock Text="Books" FontSize="36"/>
        <ListBox FontSize="30"
                 ItemsSource="{Binding Bookmarked}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding Title}"/>
                        <TextBox Text="{Binding Description}"/>
                        <TextBox Text="{Binding Author}"/>
                        <TextBox Text="{Binding Price}"/>
                        <TextBox Text="{Binding Rating}"/>
                        <TextBox Text="{Binding VIP}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>
